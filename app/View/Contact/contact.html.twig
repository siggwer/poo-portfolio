{% extends "layout.html.twig" %}

{% block title %}
    <title>Contactez moi</title>
{% endblock %}


{% block content %}
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <form action="/contact" method="post" class="col-lg-6 offset-lg-3">
                <input type="hidden" name="__csrf" id="__csrf" value="{{ __csrf }}" />

                <div class="row">
                    <div class="form-group col-sm-6">
                        <label for="name" class="h4">Nom</label>
                        <input type="text" class="form-control" name="name" placeholder="Entrez votre nom" required>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="email" class="h4">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Entrez votre email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="content" class="h4 ">Message</label>
                    <textarea name="content" class="form-control" rows="5" placeholder="Entre votre message" required></textarea>
                </div>
                <button type="submit" id="form-submit" class="btn btn-primary btn-lg pull-right ">Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}
