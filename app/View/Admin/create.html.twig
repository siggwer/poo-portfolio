{% extends "layoutadmin.html.twig" %}

{% block content %}
    <h1>Vous allez créer un article.</h1>

    <div class="container-fluid">
        <div class="row">
            <form action="/panel/create/post" method="post" class="col-lg-8 offset-lg-2" enctype="multipart/form-data">
                <input type="hidden" name="__csrf" id="__csrf" value="{{ __csrf }}" />

                <div class="form-group">
                    <label for="img">Image:</label>
                    <input type="file" class="form-control" name="img">
                </div>
                <div class="form-group">
                    <label for="title">Titre:</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="form-group">
                    <label for="chapo">Chapo:</label>
                    <textarea class="form-control" rows="5" name="chapo"></textarea>
                </div>
                <div class="form-group">
                    <label for="content">Contenu:</label>
                    <textarea class="form-control" rows="10" name="content"></textarea>
                </div>
                <div class="form-group">
                    <label for="author">Auteur:</label>
                    <input type="text" class="form-control" name="author">
                </div>

                <button type="submit" class="btn btn-info">Créer</button>
            </form>
        </div>
    </div>
{% endblock %}
